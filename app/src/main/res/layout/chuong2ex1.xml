<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:text="Quản lý nhân viên"
    android:textSize="30dp"
    android:background="#6BAA75"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center"
    android:textColor="@color/white"
    android:id="@+id/title"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Ma NV: "
        app:layout_constraintTop_toBottomOf="@id/title"
        android:textSize="25dp"
        android:id="@+id/tvMNV"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="25dp"
    app:layout_constraintLeft_toRightOf="@id/tvMNV"
        app:layout_constraintTop_toTopOf="@id/tvMNV"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Ten NV: "
        app:layout_constraintTop_toBottomOf="@id/tvMNV"
        android:textSize="25dp"
        android:id="@+id/tvTNV"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="25dp"
    app:layout_constraintLeft_toRightOf="@id/tvTNV"
        app:layout_constraintTop_toTopOf="@id/tvTNV"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Ten NV: "
        app:layout_constraintTop_toBottomOf="@id/tvTNV"
        android:textSize="25dp"
        android:id="@+id/tvGender"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <RadioGroup
        android:id="@+id/rdgGender"
        app:layout_constraintTop_toTopOf="@id/tvGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/rdMale"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Male"
            />
        <RadioButton android:id="@+id/rdFemale"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Female"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>