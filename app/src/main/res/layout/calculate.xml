<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e6e6e6e6"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="TInh toan"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv1"
        />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:hint="Nhập số thứ 1"
        android:id="@+id/txtNumber1"
        android:paddingLeft="10dp"

        />
    <EditText
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/txtNumber1"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:hint="Nhấp số thứ 2"
        android:id="@+id/txtNumber2"
        android:paddingLeft="10dp"
        />
    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="TổnG"
        android:id="@+id/btnTong"
        app:layout_constraintTop_toBottomOf="@id/txtNumber2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Kết quả: "
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/txtKQ"
        app:layout_constraintTop_toBottomOf="@id/btnTong"
        app:layout_constraintLeft_toLeftOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>